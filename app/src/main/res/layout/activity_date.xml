<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:contentDescription="@string/back"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/outline_arrow_back_ios_24"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Select The Date -->
    <TextView
        android:id="@+id/tvSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Select_The_Date"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#111111"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Day / Month / Year row -->
    <LinearLayout
        android:id="@+id/rowDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etDay"
            android:autofillHints=""
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:background="#adadad"
            android:gravity="center"
            android:hint="@string/Day"
            android:inputType="number"
            android:textColor="#111111"
            android:textColorHint="#111111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slash"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:layout_marginHorizontal="14dp"/>

        <EditText
            android:id="@+id/etMonth"
            android:autofillHints="month"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:background="#adadad"
            android:gravity="center"
            android:hint="@string/Month"
            android:inputType="text"
            android:textColor="#111111"
            android:textColorHint="#111111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slash"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:layout_marginHorizontal="14dp"/>

        <EditText
            android:id="@+id/etYear"
            android:autofillHints="Year"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:background="#adadad"
            android:gravity="center"
            android:hint="@string/Year"
            android:inputType="number"
            android:textColor="#111111"
            android:textColorHint="#111111"/>
    </LinearLayout>

    <!-- Select The Time -->
    <TextView
        android:id="@+id/tvSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Select_The_Time"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#111111"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/rowDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Time row -->
    <LinearLayout
        android:id="@+id/rowTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etHour"
            android:autofillHints="hour"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:background="#adadad"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#111111"
            android:textColorHint="#111111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:layout_marginHorizontal="18dp"/>

        <EditText
            android:id="@+id/etMinute"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:background="#adadad"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#111111"
            android:textColorHint="#111111"/>
    </LinearLayout>

    <!-- BOOK button -->
    <Button
        android:id="@+id/btnBook"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="@string/Book"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#111111"
        android:background="#adadad"
        android:layout_marginBottom="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="425dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#adadad"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/house_24"
            app:tint="#111111" />

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/cal"
            app:tint="#111111" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
