<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <!-- Rounded page panel -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Header actions -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/borderbox"
                android:padding="8dp"
                android:contentDescription="@string/back"
                app:srcCompat="@drawable/baseline_arrow_back_24"
                app:tint="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/edit"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_outline"
                android:padding="8dp"
                android:contentDescription="@string/add_item"
                app:srcCompat="@drawable/baseline_add_24"
                app:tint="#000000"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/btnEdit"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD MENU"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/titleUnderline"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Scrollable list area -->
            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/titleUnderline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp">

                <!-- IMPORTANT: ScrollView must have exactly one child -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- ===== Row 1 ===== -->
                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Beef BURGER"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/price1"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£15"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name1"
                        app:layout_constraintBottom_toBottomOf="@id/name1"
                        app:layout_constraintEnd_toStartOf="@+id/img1"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@id/name1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/beef" />

                    <!-- ===== Row 2 ===== -->
                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chicken burger"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img1"
                        app:layout_constraintEnd_toStartOf="@+id/price2"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£10"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name2"
                        app:layout_constraintBottom_toBottomOf="@id/name2"
                        app:layout_constraintEnd_toStartOf="@+id/img2"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/chick"
                        app:layout_constraintTop_toTopOf="@id/name2"
                        app:layout_constraintBottom_toBottomOf="@id/name2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ===== Row 3 ===== -->
                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pizza"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img2"
                        app:layout_constraintEnd_toStartOf="@+id/price3"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£10"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name3"
                        app:layout_constraintBottom_toBottomOf="@id/name3"
                        app:layout_constraintEnd_toStartOf="@+id/img3"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/pizza"
                        app:layout_constraintTop_toTopOf="@id/name3"
                        app:layout_constraintBottom_toBottomOf="@id/name3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ===== Row 4 ===== -->
                    <TextView
                        android:id="@+id/name4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Malbec bottle"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img3"
                        app:layout_constraintEnd_toStartOf="@+id/price4"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£15"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name4"
                        app:layout_constraintBottom_toBottomOf="@id/name4"
                        app:layout_constraintEnd_toStartOf="@+id/img4"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/malbec"
                        app:layout_constraintTop_toTopOf="@id/name4"
                        app:layout_constraintBottom_toBottomOf="@id/name4"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ===== Row 5 ===== -->
                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pstar Martini"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img4"
                        app:layout_constraintEnd_toStartOf="@+id/price5"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/price5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£8"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name5"
                        app:layout_constraintBottom_toBottomOf="@id/name5"
                        app:layout_constraintEnd_toStartOf="@+id/img5"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/sbeach"
                        app:layout_constraintTop_toTopOf="@id/name5"
                        app:layout_constraintBottom_toBottomOf="@id/name5"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ===== Row 6 ===== -->
                    <TextView
                        android:id="@+id/name6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sbeach"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img5"
                        app:layout_constraintEnd_toStartOf="@+id/price6"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/price6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£8"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name6"
                        app:layout_constraintBottom_toBottomOf="@id/name6"
                        app:layout_constraintEnd_toStartOf="@+id/img6"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/sbeach"
                        app:layout_constraintTop_toTopOf="@id/name6"
                        app:layout_constraintBottom_toBottomOf="@id/name6"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ===== Row 7 ===== -->
                    <TextView
                        android:id="@+id/name7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Beer"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img6"
                        app:layout_constraintEnd_toStartOf="@+id/price7"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/price7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£4"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/name7"
                        app:layout_constraintBottom_toBottomOf="@id/name7"
                        app:layout_constraintEnd_toStartOf="@+id/img7"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="63dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@id/name7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/name7"
                        app:srcCompat="@drawable/beer" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
